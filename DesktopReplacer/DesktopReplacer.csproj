<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net6.0-windows</TargetFramework>
        <LangVersion>preview</LangVersion>
        <CefSharpAnyCpuSupport>true</CefSharpAnyCpuSupport>
        <PreserveCompilationContext>false</PreserveCompilationContext>
        <UseWPF>true</UseWPF>
        <UseWindowsForms>true</UseWindowsForms>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <OutputPath>$(SolutionDir)bin/</OutputPath>
    </PropertyGroup>
    <ItemGroup>
      <PackageReference Include="cef.redist.x64" Version="91.1.6" />
      <PackageReference Include="CefSharp.Common" Version="90.6.70" />
      <PackageReference Include="CefSharp.Wpf" Version="90.6.70" />
      <PackageReference Include="MahApps.Metro.IconPacks.MaterialDesign" Version="4.8.0" />
      <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
      <PackageReference Include="WindowsAPICodePack-Shell" Version="1.1.1" />
    </ItemGroup>
    <ItemGroup>
      <ProjectReference Include="..\iTunesWidget\iTunes.csproj" />
    </ItemGroup>
    <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="false">
        <!-- TODO -->
      <Exec Command="cd &quot;$(OutDir)&quot;&#xD;&#xA;del /S &quot;*.pdb&quot;&#xD;&#xA;del /S &quot;*.json&quot;&#xD;&#xA;echo &quot;deleted debugging data&quot;" />
    </Target>
</Project>